<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Star Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>

<body class="bg-stone-200">
    <br>
    <!-- Ini awal shop -->
    <h3 class="text-center">BOOKING TICKET</h3>
    <div class="album py-5 bg-light mb-5">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% for (item of items) { %>
                    <div class="col p-3">
                        <div class="card" style="border-radius:10px;">
                            <img width="295px" height="295px" src="<%= item.gambar %>">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <%= item.name %>
                                </h4>
                                <h6 class="card-title"> Rp. <%= item.harga %>
                                </h6>
                                <div class="d-flex justify-content-between align-items-center">
                                    <!-- <a href="#formCheckout" class="w-30 btn btn-lg btn-primary"
                                        style="background-color: dodgerblue; font-size: 15px; border: transparent;">
                                        Booking
                                    </a> -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
            <form action="/items/beli" method="post" id="formCheckout">
                <h3 class="subJudul mt-5 mb-4" id="projectPage">Form Pembelian</h3>
                <div class="flex items-center">
                    <input type="text" name="name" placeholder="Nama Pembeli"
                        class="w-2/5 w-full border px-3 py-2 text-sm mr-2 bg-white">
                    <select name="type" class="w-1/5 w-full border px-3 py-2 text-sm mr-2 bg-white">
                        <option value="dibeli">Dibeli</option>
                    </select>
                    <select placeholder="Paket Item" name="item_id"
                        class="w-2/5 w-full border px-3 py-2 text-sm mr-2 bg-white">
                        <% for (item of items) { %>
                            <option value="<%= item.id %>">
                                <%= item.name %>
                            </option>
                            <% } %>
                    </select>
                    <input type="number" name="amount" value="0"
                        class="w-1/5 w-full border px-3 py-2 text-sm mr-2 bg-white">
                    <button class="w-30 btn btn-lg btn-primary"
                        style="background-color: dodgerblue; font-size: 15px; border: transparent;"
                        onclick="alert('Booking Tiket Berhasil')">
                        Buy
                    </button>
                </div>
            </form>
            <br>
            <a href="home" class="w-30 btn btn-lg btn-primary"
                style="background-color: dodgerblue; font-size: 15px; border: transparent;">
                BACK
            </a>
        </div>
    </div>
    <!-- Ini akhir shop -->
</body>

</html>