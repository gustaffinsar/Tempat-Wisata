            <section class="p-4 mt-4 bg-white shadow-lg">
                <h4 class="subJudul mb-3" id="coursePage">List Item</h4>
                <table class="border" cellpadding="10">
                    <ul>
                        <tr>
                            <th class="border"> Nama Item </th>
                            <th class="border"> Harga Item</th>
                            <!-- <th class="border"> Stok Item</th> -->
                            <th class="border"> Gambar Item</th>
                            <!-- <th class="border"> Status Item </th> -->
                            <!-- <th class="border"> Update Status </th> -->
                        </tr>
                        <% for (item of items) { %>
                            <tr>
                                <th class="border">
                                    <%= item.name %>
                                </th>
                                <th class="border"> Rp.<%= item.harga %>
                                </th>
                                <!-- <th class="border">
                                    <%= item.qty %> pcs
                                </th> -->
                                <th class="border"><img width="100px" height="100px" src="<%= item.gambar %>"></th>
                                <th class="border"><a href="/deleteStok/<%= item.id %>">Delete</a>
                                </th>
                                <!-- <th class="border">
                                    <%= item.status %>
                                </th> -->
                                <!-- <th class="border"><a href="/updateItem/<%= item.id %>">Update</a></th>
                            </tr> -->
                                <% } %>
                    </ul>
                </table>
            </section>

            <section class="p-4 mt-4 bg-white shadow-lg">
                <h4 class="subJudul mb-3" id="coursePage">History</h4>
                <table class="border" cellpadding="10">
                    <ul>
                        <tr>
                            <th class="border"> Nama Pembeli </th>
                            <th class="border"> Type </th>
                            <th class="border"> Nama Item </th>
                            <th class="border"> Jumlah </th>
                            <th class="border"> Waktu </th>
                        </tr>
                        <% for (log of pembukuan) { %>
                            <tr>
                                <th class="border">
                                    <%= log.name %>
                                </th>
                                <th class="border">
                                    <%= log.type %>
                                </th>
                                <th class="border">
                                    <%= items.find(item=> item.id === log.item_id).name %>
                                </th>
                                <th class="border">
                                    <%= log.amount %> pcs
                                </th>
                                <th class="border">
                                    <%= log.create_time%>
                                </th>
                                <th class="border"><a href="/deleteHistory/<%= log.id %>">Delete</a>
                            </tr>
                            <% } %>
                    </ul>
                </table>
            </section>

